# This is an example makefile
# It is very important to add -lncursesw for the ncurses library
CC=g++
DEBUG=-g
CFLAGS=-c $(DEBUG)
LDFLAGS=-lncursesw $(DEBUG)
SOURCES=./view/display.cpp ./view/utility.cpp
SOURCESTEST=Hand.cpp Card.cpp ./unittests/test.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=display
EXECUTABLETEST=test

all: clean $(SOURCES) $(EXECUTABLE)
test: clean $(SOURCESTEST) $(EXECUTABLETEST)

$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(OBJECTS) $(LDFLAGS) -o $@

$(EXECEXECUTABLETEST): $(OBJECTS) 
	$(CC) $(OBJECTS) $(LDFLAGS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@

clean:
	rm -rf *.o $(EXECUTABLE)

