#include "../Card.h"
#include "../Hand.h"

#include <iostream>

using namespace std;

void test_card_initialization();
void test_hand_initialization();

int main() 
{
  test_card_initialization();
  test_hand_initialization();

  return 0;
}


void test_card_initialization() {
  Card card1 {"6C"};
  string expected_card1 = "6C";
  if (expected_card1 == card1.get_card())
    cout << "Card class initialization passed!" << endl;
  else
    cout << "Card class initialization failed!" << endl;
  

}


void test_hand_initialization() {
  const Vector<string> sf {"6C", "7C", "8C", "9C", "TC"};
  Hand hand1{sf};
 
  if (sf == hand1.get_hand())
    cout << "Hand class initialization passed!" << endl;
  else
    cout << "Hand class initialization failed!" << endl;
  

}
